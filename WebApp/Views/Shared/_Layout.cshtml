<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/bootstrap-css")
    @Scripts.Render("~/bundles/bootstrap-js")
    
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Identity", "Index", "Home", null, new { @class = "navbar-brand" })  
                <a class="navbar-brand" id ="TimerPanel"></a>  
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated && (User.IsInRole("User") || User.IsInRole("Admin")))
                    { 
                    <li>@Html.ActionLink("Обращение", "Index", "Allocution")</li>
                    <li>@Html.ActionLink("Реестр", "Index", "Reestr")</li>
                        
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("НВ", "Index", "ExcludeDate")</li>
                        <li>@Html.ActionLink("Роли", "Index", "RolesAdmin")</li>
                        <li>@Html.ActionLink("Пользователи", "Index", "UsersAdmin")</li>
                    }
                </ul>                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year"</p>
        </footer>
    </div>
</body>
</html>