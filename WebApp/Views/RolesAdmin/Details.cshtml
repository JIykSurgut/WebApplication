@model ZDL.Models.AppRole
@{
    ViewBag.Title = "Информация о роли";
}

<div>
    <h3>Информация о роли</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Наименование")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<h4>Список пользователей</h4>
@if (ViewBag.UserCount == 0)
{
    <hr />
    <p>Нет пользователей</p>
}

<table class="table">

    @foreach (var item in ViewBag.Users)
    {
        <tr>
            <td>
                @item.UserName
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Вернуться", "Index")
</p>



